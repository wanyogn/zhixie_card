/* pages/card/card.wxss */
.view_container{
  background: #fff;
  margin: 30rpx 30rpx 0 30rpx;
}
.card{
  height: 250rpx;
  padding: 50rpx 40rpx;
  background: #efefef;
  border-radius: 20rpx;
  box-shadow: 1px 1px 3px #888888,-1px -1px 3px #888888;
  position: relative
}
.card_left{
  float: left;
}
.card_right{
  float: right
}
.card_name{
  font-size: 44rpx;
  font-weight: 550;
  color: #000;
}
.card_phone{
  margin-top: 20rpx;
  font-size: 26rpx;
}
.card_job{
  margin-top: 10rpx;
  font-size: 26rpx;
}
.card_company{
  font-size: 26rpx;
  position: absolute;
  bottom: 50rpx;
}
.card_img{
  width: 140rpx;
  height: 140rpx;
  background: #fff;
  border-radius: 50%;
}
.card_img image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.editInfo{
  text-align: center;
  color: #3fcf94;
  font-size: 30rpx;
  margin-top: 30rpx;
}
/*点赞，转发，查看统计*/
.info_statistics{
  margin-top: 20rpx;
  width: 100%;
  height: 150rpx;
  display: flex;
  flex-direction: row;
}
.statistics_content{
  width: 33%;
  border-right: 2px solid #efefef;
}
.special_content{
  width: 33%;
  border: none !important;
}

.content_main{
  padding-top: 30rpx;
  display: flex;
  flex-direction: column;
}
.statistics_content .content_image{
  width: 60rpx;
  height: 60rpx;
  margin:auto;
}
.special_content button{
  width: 60rpx;
  height: 60rpx;
  background: #fff;
}
/*去掉按钮边框*/
.special_content button::after{
  border:none;
}
.statistics_content .zhuan_image{
   width: 60rpx;
  height: 60rpx;
}
.statistics_content view{
  font-size: 20rpx;
  text-align: center;
  color: #5a5a5a;
}
/*联系我们*/
.contact_view{
  margin-top: 20rpx;
  width: 100%;
}
.contact_view .phone_call{
  width: 45%;
  float: left;
  background: #3fcf94;
  border-color: #3fcf94;
  color: #fff;
  font-size: 28rpx;
}
.contact_view .wechat_call{
  width: 45%;
  float: right;
  background: #fff;
  border-color: #3fcf94;
  color: #3fcf94;
  font-size: 28rpx;
}
/*基本信息*/
.base_info{
  margin-top: 20rpx;
}
.base_list{
  width: 100%;
  height: 80rpx;
  border-bottom: 2px solid #efefef;
}
.list_left{
  float: left;
  display: flex;
  flex-direction: row
}
.list_right{
  float: right;
}
.base_list image{
  width: 40rpx;
  height: 40rpx;
  margin-top: 20rpx
}
.base_list .list_content{
  font-size: 26rpx;
  line-height: 80rpx;
  margin-left: 40rpx;
}
.list_tip{
  color: #efefef;
  font-weight: bold;
  line-height: 80rpx;
}
.save_phone{
  margin-top: 30rpx;
  background: #3fcf94;
  border: #3fcf94;
  color: #fff;
  font-size: 30rpx;
}