/* pages/my/my.wxss */
page{
  height: 100%;
}
.view_container{
  width: 100%;
  height: 100%;
  background: #f7f7f7;
  padding: 0;
}
.view_head{
  width: 100%;
  height: 240rpx;
  background: #fff;
  border-top: 1px solid #efefef;
  border-bottom: 1px solid #efefef
}
.head_main{
  padding: 45rpx 30rpx;
}
.head_main image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.head_main text{
  font-size:60rpx;
  color: #000;
  line-height: 150rpx;
  float: right
}
.base_info{
  margin-top: 40rpx;
  background: #fff;
  border-bottom: 1px solid #efefef;
}
.base_list{
  height: 80rpx;
  padding: 0 30rpx;
  border-top: 1px solid #efefef;
}
.list_left{
  float: left;
  display: flex;
  flex-direction: row
}
.list_right{
  float: right;
}
.base_list image{
  width: 40rpx;
  height: 40rpx;
  margin-top: 20rpx
}
.base_list .list_content{
  font-size: 26rpx;
  line-height: 80rpx;
  margin-left: 40rpx;
}
.list_tip{
  color: #efefef;
  font-weight: bold;
  line-height: 80rpx;
}