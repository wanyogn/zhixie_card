/* pages/seeCard.wxss */
page{
  height: 100%;
}
.view_container{
  width: 100%;
  height: 100%;
  background: #e8e8e8;
  padding: 0;
}
.container_content{
  padding: 9rpx 22rpx;
}
.base_info{
  margin-top: 20rpx;
  height: 120rpx;
  background: #fff;
  border-radius: 60rpx;
}
.base_info image{
  width: 100rpx;
  height:100rpx;
  border-radius: 50rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
  border: 1rpx solid #e8e8e8
}
.base_list{
  margin-top: 25rpx;
  margin-left: 40rpx;
}
.name_content{
  display: flex;
  flex-direction: row
}
.name{
  font-size: 32rpx;
  color: #323232;
  font-weight: bold
}
.mt10{
  margin-top: 8rpx;
  margin-left: 15rpx;
}
.mr20{
  margin-right: 50rpx;
  line-height: 120rpx;
}
.common{
  font-size: 22rpx;
  color: #adadad;
}
.left{
  float: left;
}
.right{
  float: right
}