/* pages/card/card.wxss */
@import '../areaSel/areaSel.wxss';
page{
  height: 100%;
  background: #f5f5f5;
}
.view_container{
  margin: 30rpx;
}
.card{
  height: 200rpx;
  padding: 50rpx 40rpx;
  background: #fff;
  opacity: 0.9;
  border-radius: 20rpx;
  /*box-shadow: 1px 1px 3px #fff,-1px -1px 3px #fff;*/
  position: relative
}
.card_left{
  float: left;
}
.card_right{
  float: right
}
.card_name{
  font-size: 44rpx;
  font-weight: bold;
  color: #343434;
}
.card_phone{
  /*margin-top: 10rpx;*/
  font-size: 28rpx;
}
.card_job{
  margin-top: 28rpx;
  font-size: 26rpx;
 color: #343434;
}
.card_company{
  font-size: 26rpx;
  position: absolute;
  bottom: 50rpx;
}
.card_img{
  width: 140rpx;
  height: 140rpx;
  background: #fff;
  border-radius: 50%;
  margin-top: 20rpx;
}
.card_img image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
/*点赞，转发，查看统计*/
.info_statistics{
  margin-top: 30rpx;
  width: 100%;
  height: 180rpx;
  background: #fff;
  border-radius: 20rpx;
}
.info_content{
  padding-top: 25rpx;
  display: flex;
  flex-direction: row;
}
.statistics_content{
  width: 33%;
  border-right: 1px solid #efefef;
}
.special_content{
  width: 33%;
  border: none !important;
}

.content_main{
  display: flex;
  flex-direction: column;
}
.statistics_content .content_image{
  width: 86rpx;
  height: 60rpx;
  margin:auto;
}
.special_content button{
  width: 86rpx;
  height: 60rpx;
  background: #fff;
}
/*去掉按钮边框*/
.special_content button::after{
  border:none;
}
.statistics_content .zhuan_image{
   width: 86rpx;
  height: 60rpx;
}
.statistics_content view{
  font-size: 20rpx;
  text-align: center;
  color: #adadad;
  margin-top: 20rpx;

}
/*联系我们*/
.contact_view{
  margin-top: 20rpx;
  width: 100%;
}
.contact_view .phone_call{
  width: 45%;
  float: left;
  background: #3fcf94;
  border-color: #3fcf94;
  color: #fff;
  font-size: 28rpx;
}
.contact_view .wechat_call{
  width: 45%;
  float: right;
  background: #fff;
  border-color: #3fcf94;
  color: #3fcf94;
  font-size: 28rpx;
}
/*展开*/
.open_close{
  font-size: 26rpx;
  color: #adadad;
  text-align: center;
  padding: 20rpx 0
}
/*基本信息*/
.base_info{
  background: #fff;
  padding: 20rpx 40rpx;
  border-radius: 20rpx;
}
.base_list{
  width: 100%;
  height: 70rpx;
  border-bottom: 1px solid #efefef;
}
.list_left{
  float: left;
  display: flex;
  flex-direction: row;
  width: 80%;
  height: 100%;
}
.list_right{
  float: right;
  height: 20%
}
.base_list image{
  width: 40rpx;
  height: 40rpx;
  margin-top: 15rpx
}
.base_list .list_content{
  font-size: 26rpx;
  line-height: 70rpx;
  margin-left: 40rpx;
  color: #3c3c3c;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.list_tip{
  color: #efefef;
  font-weight: bold;
  line-height: 80rpx;
}
.view_btn{
  font-size: 24rpx;
  color: #f39800;
  padding: 1rpx 20rpx;
  border: 1rpx solid #f39800;
  border-radius: 20rpx;
  margin-top: 15rpx;
}





